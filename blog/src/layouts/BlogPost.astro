---
const {
  title,
  description,
  pubDate,
  author = "Oren",
  lang = "en",
  dir = lang === "he" ? "rtl" : "ltr",
  image,
  tags = []
} = Astro.props;
const isoDate = new Date(pubDate).toISOString();
const ogImage = image?.src ?? "/images/og-default.jpg";
const canonical = new URL(Astro.url.pathname, Astro.site);
---
<html lang={lang} dir={dir}>
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />
    <meta property="og:type" content="article" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {ogImage && <meta property="og:image" content={ogImage} />}
    <meta name="twitter:card" content="summary_large_image" />
    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Article",
        headline: title,
        description,
        datePublished: isoDate,
        author: [{ "@type": "Person", name: author }],
        image: ogImage ? [ogImage] : [],
        mainEntityOfPage: canonical.toString()
      })}
    </script>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <style>
      :root { --max: 820px; font-family: system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial; }
      body { margin: 0; padding: 0 1rem 4rem; display: grid; place-items: center; }
      main { max-width: var(--max); width: 100%; line-height: 1.65; }
      h1 { margin: 2rem 0 0.25rem; }
      .meta { color: #666; font-size: 0.925rem; margin-bottom: 1.25rem; }
      img { max-width: 100%; height: auto; }
      .tags { margin-top: 0.5rem; font-size: 0.9rem; color: #444; }
      .tags span { background: #f1f3f5; padding: 2px 8px; border-radius: 9999px; margin-inline-end: 6px; }
      article p { margin: 0.75rem 0; }
      hr { margin: 2rem 0; }
      .cta { margin-top: 2rem; }
      a { text-decoration: none; color: inherit; }
    </style>
  </head>
  <body>
    <main>
      <a href={Astro.site ? new URL(import.meta.env.BASE_URL + 'blog/', Astro.site) : '/blog/'}>← Back to Blog</a>
      <h1>{title}</h1>
      <div class="meta">
        <time datetime={isoDate}>{new Date(pubDate).toDateString()}</time> · {author}
        {tags.length > 0 && <div class="tags">{tags.map(t => <span>{t}</span>)}</div>}
      </div>
      {image?.src && <img src={image.src} alt={image.alt ?? title} loading="lazy" />}
      <article>
        <slot />
      </article>
      <hr />
      <div class="cta">
        <p><strong>Need a locksmith now?</strong> Metro Detroit: <a href="tel:13138893266">(313) 889-3266</a> · Westchester/NY: <a href="tel:19293676689">(929) 367-6689</a></p>
      </div>
    </main>
  </body>
</html>